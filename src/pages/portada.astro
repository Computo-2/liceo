<style is:global>
  /* En <head>:
     <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover"> */

  .vf-iframe{
    position:absolute;
    left:50%;
    top:50%;
    transform:translate(-50%,-50%);
    border:0;
    pointer-events:none;
    background:transparent;
    transition:transform .3s ease;
  }

  /* ===== MÓVIL: CONTAIN (video completo) ===== */
  /* pantalla más ancha que 16:9 → dimensionar por alto */
  @media (max-width:768px) and (min-aspect-ratio:16/9){
    .vf-iframe{
      width:calc(100dvh * 16 / 9);
      height:100dvh;
    }
  }
  /* pantalla más alta que 16:9 → dimensionar por ancho */
  @media (max-width:768px) and (max-aspect-ratio:16/9){
    .vf-iframe{
      width:100dvw;
      height:calc(100dvw * 9 / 16);
    }
  }
  @media (max-width:768px){
    .vf-iframe{ top:65%; } /* el encuadre que te gustó */
  }

  /* ===== iPad & DESKTOP: COVER con overscan (sin barras) ===== */
  /* más ancha que 16:9 → dimensionamos por ancho */
  @media (min-width:769px) and (min-aspect-ratio:16/9){
    .vf-iframe{
      width:108dvw;    /* overscan para matar bordes */
      height:60.75dvw; /* 56.25% * 1.08 */
      top:55%;         /* encuadre un pelín abajo */
    }
  }
  /* más alta que 16:9 → dimensionamos por alto */
  @media (min-width:769px) and (max-aspect-ratio:16/9){
    .vf-iframe{
      width:192dvh;    /* 177.78% * 1.08 */
      height:108dvh;   /* overscan */
      top:55%;
    }
  }

  /* iOS perf hint */
  @supports (-webkit-touch-callout:none){
    .vf-iframe{ will-change:transform; }
  }
</style>
