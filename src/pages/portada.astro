<style>
  section {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 87vh;
    overflow: hidden;
    font-family: Arial, sans-serif;
    font-size: 2rem;
  }

  .video-fondo {
    position: absolute;
    inset: 0;
    overflow: hidden;
    z-index: -1;
  }

  .video-fondo iframe {
    position: absolute;
    top: 75%; /* por defecto en PC */
    left: 50%;
    border: 0;
    transform: translate(-50%, -50%);
    pointer-events: none;
    transition: all 0.4s ease-in-out;
  }

  /* Degradado en la parte inferior */
  .video-fondo::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 200px;
    background: linear-gradient(to top, rgba(192, 190, 190, 0.8), transparent);
    pointer-events: none;
    z-index: 1;
  }

  @media (min-aspect-ratio: 16/9) {
    .video-fondo iframe {
      width: 100vw;
      height: 56.25vw;
    }
  }

  @media (max-aspect-ratio: 16/9) {
    .video-fondo iframe {
      width: 177.78vh;
      height: 100vh;
    }
  }

  /* SOLO ajuste en m√≥viles */
  @media (max-width: 768px) {
    .video-fondo iframe {
      top: 69%;
    }
  }

  /* Tablets (iPad, etc.) */
@media (min-width: 769px) and (max-width: 1024px) {
  .video-fondo iframe {
    top: 67%;
  }
}

@media (min-width: 900px) and (max-width: 1400px) {
  .video-fondo iframe {
    width: 110vw;
    height: 61vw;
    top: 52%;
  }
}

@media (min-width: 1921px) {
  .video-fondo iframe {
    width: 115vw;
    height: 63vw;
    top: 56%;
  }
}

  .imagen-container {
    position: absolute;
    bottom: 30px;
    right: 30px;
    z-index: 10;
  }

  .imagen-container img {
    width: 300px;
    height: auto;
    max-width: 100%;
    cursor: pointer;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .imagen-container img:hover {
    transform: scale(1.05);
  }

  .imagen-container img:active {
    transform: scale(0.95);
  }

  @media (max-width: 768px) {
    .imagen-container {
      bottom: 15px;
      right: 15px;
    }

    .imagen-container img {
      width: 150px;
    }
  }
</style>

<section class="relative min-h-[80vh] overflow-hidden pt-60">
  <div class="video-fondo">
    <iframe
      src="https://player.vimeo.com/video/1116858454?background=1&autoplay=1&muted=1&loop=1&playsinline=1"
      allow="autoplay; fullscreen; picture-in-picture"
      allowfullscreen
    ></iframe>
  </div>

  <div class="imagen-container">
    <img src="/CONTACTANOS.svg" alt="Liceo Michoacano" />
  </div>
</section>
