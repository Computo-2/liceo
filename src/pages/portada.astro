<style>
  section {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 90vh;
    overflow: hidden;
    font-family: Arial, sans-serif;
    font-size: 2rem;
  }

  .video-fondo {
    position: absolute;
    inset: 0;
    overflow: hidden;
    z-index: -1;
  }

  .video-fondo iframe {
    position: absolute;
    top: 60%;
    left: 50%;
    border: 0;
    transform: translate(-50%, -50%);
    pointer-events: none;
  }

  /* Pantallas más anchas que 16:9 → manda el ancho */
  @media (min-aspect-ratio: 16/9) {
    .video-fondo iframe {
      width: 100vw;
      height: 56.25vw; /* 100 / (16/9) */
    }
  }

  /* Pantallas más altas que 16:9 → manda el alto */
  @media (max-aspect-ratio: 16/9) {
    .video-fondo iframe {
      width: 177.78vh; /* 100 * (16/9) */
      height: 100vh;
    }
  }

  .imagen-container {
    position: absolute;
    bottom: 30px;
    right: 30px;
    z-index: 1;
  }

  .imagen-container img {
    width: 300px;
    height: auto;
    max-width: 100%;
    cursor: pointer; /* hace que parezca clickeable */
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .imagen-container img:hover {
    transform: scale(1.05);
  }

  .imagen-container img:active {
    transform: scale(0.95);
  }
</style>

<section class="relative min-h-[80vh] overflow-hidden pt-60">
  <div class="video-fondo">
    <iframe
      src="https://player.vimeo.com/video/1116858454?background=1&autoplay=1&muted=1&loop=1&playsinline=1"
      allow="autoplay; fullscreen; picture-in-picture"
      allowfullscreen
    ></iframe>
  </div>

  <div class="imagen-container">
    <img src="/CONTACTANOS.svg" alt="Liceo Michoacano" />
  </div>
</section>
