---
const reviews = [
  {
    name: "Juan Pérez",
    role: "Estudiante",
    image: "https://i.pravatar.cc/100?img=1",
    review: "Recomendación 1.",
    rating: 5,
  },
  {
    name: "Mario López",
    role: "Estudiante",
    image: "https://i.pravatar.cc/100?img=7",
    review: "Recomendación 2.",
    rating: 4,
  },
  {
    name: "Carlos Hernández",
    role: "Estudiante",
    image: "https://i.pravatar.cc/100?img=3",
    review: "Recomendación 3.",
    rating: 4,
  },
];
---

<section class="py-12 bg-gray-50">
  <div class="max-w-5xl mx-auto px-4 text-center">
    <!-- Encabezado -->
    <div class="mb-10">
      <h1 class="text-9xl font-bold text-indigo-600">+28</h1>
      <h2 class="text-5xl text-gray-700">Años de experiencia</h2>
    </div>

    <!-- Reseñas -->
    <div class="grid gap-6 md:grid-cols-3">
      {reviews.map((item) => (
        <div class="bg-white p-6 rounded-lg shadow text-center">
          <img src={item.image} alt={item.name} class="w-16 h-16 rounded-full mx-auto mb-3" />
          <h4 class="font-semibold text-gray-800">{item.name}</h4>
          <p class="text-sm text-gray-500">{item.role}</p>

          <!-- Rating -->
          <div class="flex justify-center my-2">
            {Array.from({ length: 5 }).map((_, i) => (
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill={i < item.rating ? "currentColor" : "none"}
                stroke="currentColor"
                class={`w-5 h-5 ${i < item.rating ? "text-yellow-400" : "text-gray-300"}`}
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M11.049 2.927c.3-.921 1.603-.921 
                     1.902 0l2.021 6.18a1 1 0 00.95.69h6.49c.969 
                     0 1.371 1.24.588 1.81l-5.255 
                     3.82a1 1 0 00-.364 1.118l2.021 
                     6.18c.3.922-.755 1.688-1.54 
                     1.118l-5.255-3.82a1 1 0 
                     00-1.176 0l-5.255 
                     3.82c-.784.57-1.838-.196-1.539-1.118l2.02-6.18a1 
                     1 0 00-.364-1.118L2.44 
                     11.61c-.783-.57-.38-1.81.588-1.81h6.49a1 
                     1 0 00.951-.69l2.02-6.18z"
                />
              </svg>
            ))}
          </div>

          <p class="text-gray-600 text-sm">{item.review}</p>
        </div>
      ))}
    </div>
  </div>
</section>
