---
interface Props {
  href?: string;
  title: string;
  subtitle?: string;
  as?: 'a' | 'button' | 'div';
  class?: string;
}

const { href = '#', title, subtitle, as = 'a' } = Astro.props;
const Tag = as;
---

<Tag
  href={as === 'a' ? href : undefined}
  class:list={[
    'group flex items-center gap-x-6 rounded-2xl p-6',
    'hover:bg-white/5 focus:outline-none',
    'shadow-xl border border-white/15',
    Astro.props.class,
  ]}
>
  <span class="flex items-center justify-center w-16 h-16 md:w-20 md:h-20 rounded-xl bg-[#5b73b0] group-hover:bg-blue-500">
    <slot name="icon" />
  </span>

  <span class="text-left">
    <span class="block font-semibold text-white text-3xl md:text-4xl leading-tight">
      {title}
    </span>
    {subtitle && (
      <span class="block text-xl md:text-2xl text-gray-300 leading-snug">
        {subtitle}
      </span>
    )}
  </span>
</Tag>
